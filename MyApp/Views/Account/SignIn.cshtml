@model MyApp.Models.Account.SignInUserModel

<!DOCTYPE html>
<html lang="en">
<head>
    <title>SignIn page</title>
</head>
<body>
    <div class="row">
        <div asp-validation-summary="ModelOnly"></div>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>

    <div class="container border" style="padding:20px">
        <form asp-action="SignIn" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"> </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SignInUser.Email"></label>
                </div>
                <div class="col-2">
                    <input type="email" asp-for="SignInUser.Email" class="form-control">
                </div>
                <span class="text-danger" asp-validation-for="SignInUser.Email"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SignInUser.Password"></label>
                </div>
                <div class="col-2">
                    <input type="password" asp-for="SignInUser.Password" class="form-control">
                </div>
                <span class="text-danger" asp-validation-for="SignInUser.Password"></span>
            </div>
            <div class="form-group row">

                <div class="col-2">
                    <input type="submit" class="btn btn-primary" value="Login">
                </div>
            </div>
        </form>
    </div>
</body>
</html>
